


<div class="container">
  <% if !@errors.nil? %>
  <h1><%= @errors %></h1>
  <% end %>

  <h1>Welcome to 'BLOGNAME'</h1>
    <% unless logged_in? %>
  <form action= "/user/log_in" method= "get">
    <input type= "submit" value= "USER LOG IN" >
  </form>
  <form action= "/user/new" method= "get">
    <input type= "submit" value= "Sign Up!" >
  </form>
  <% end %>
  <% if !@message.nil? %>
    <b><%= @message %></b><br>
  <% end %>
  <h2><a href= "/post/new">new post</a></h2>
  <section>
    <% @all_posts.each do |post| %>
    <p>
      <a href= "/post/<%= post.id %>"><%=post.title %></a><br><br>
      <%= post.blog %><br><br>
      <%=post.created_at %><br>
      <span style= "color:blue">Tags:</span>
      <%post.tags.each do |tag| %>
        <a href= "/tag/<%= tag.name %>"><%= tag.name %></a>
      <%end%>
    </p>
    <% end %>
  </section>
</div>
